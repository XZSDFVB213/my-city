{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node","jest"],
    "composite": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts","src/**/*.test.ts","src/**/*.spec.ts"],
  "exclude": [
    "jest.config.ts",
    "jest.config.cts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
